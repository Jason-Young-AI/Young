data = {
    name = "en-ro"
    directory = "Data"
    sides = ["source", "target"]
    output_side = "target"
    languages = {
        source = "en"
        target = "ro"
    }
    filter = {
        sides = ["source", "target"]
        source = [0, 100]
        target = [0, 100]
        validation = False
        training = True
    }
}
visualizer = {
    name = ${binaries.train.trainer}
    server = "www.young-leigh.love"
    port = 6789
    username = "Guest_Visdom"
    password = "Happy_Visual_001"
    logging_path = ${binaries.train.trainer}"_"${binaries.train.data.name}"_visdom"
    offline = False
    overwrite = True
}
process_control = {
    iteration = {
        traverse_time = 20
        accumulate_number = 2
        mode = "shuffle"
        sort_order = ${binaries.train.data.sides}
    }
    distribution = {
        device = "GPU"
        master_ip = "127.0.0.1"
        master_port = "12345"
        world_size = 4
        ranks = [0, 1, 2, 3]
        workshop_capacity = 60
    }
    training = {
        period = 1000
        batch_size = 4096
        batch_type = "token"
    }
    validation = {
        period = 1000
        batch_size = 32
        batch_type = "sentence"
    }
    checkpoint = {
        directory = "Checkpoint"
        keep_number = 100
        reset_scheduler = False
        reset_optimizer = False
        reset_step = False
    }
}
model = "transformer"
tester = "beam_search"
scheduler = "noam"
optimizer = "adam"
trainer = "seq2seq"
criterion = {
    training  = "label_smoothing_cross_entropy"
    validation  = "cross_entropy"
}
random_seed = 1234
logging_path = "train_"${binaries.train.data.name}"_"${binaries.train.trainer}"_"${binaries.train.model}".log"
